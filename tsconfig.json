{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true
  }
}
